<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScrollView">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#E1D4E9"
                        app:cardElevation="10dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cerebro"/>




            </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neurológica"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#048A8F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trata as doenças que acometem o sistema nervoso central, nervos, nervos periféricos e músculos."
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:elegantTextHeight="true"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	Alzheimer\n•	Esclerose Múltipla\n•	AVC\n•	Parkinson"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:elegantTextHeight="true"
                        android:inputType="textMultiLine"
                        android:justificationMode="inter_word"
                        android:lines="4"/>


                </LinearLayout>

                
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#E1D4E9"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/coracao"/>




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiológica"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#048A8F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Trata do coração e vasos sanguíneos."
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:elegantTextHeight="true"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	Hipertensão\n•	Insuficiência Cardíaca\n•	Cardiopatia Congênita\n•	Arritimia Cardiaca"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:elegantTextHeight="true"
                        android:inputType="textMultiLine"
                        android:justificationMode="inter_word"
                        android:lines="4"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#E1D4E9"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/endocrino"/>




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endocrinologia"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#048A8F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trata de hormônios e metabolismo."
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:elegantTextHeight="true"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	Diabetes\n•	Obesidade\n•	Doença de Tireóide\n•	Osteoporose\n•	Osteopenia"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:elegantTextHeight="true"
                        android:inputType="textMultiLine"
                        android:justificationMode="inter_word"
                        android:lines="5"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#E1D4E9"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rins"/>




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nefrologia"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#048A8F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trata o sistema renal e urinário. "
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:elegantTextHeight="true"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	Tumor\n•	Cistos\n•	Cálculo Renal\n•	Insuficiência Renal"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:elegantTextHeight="true"
                        android:inputType="textMultiLine"
                        android:justificationMode="inter_word"
                        android:lines="4"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#E1D4E9"
                        app:cardElevation="10dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cancer"/>




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oncologia"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:textColor="#048A8F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trata de tumores benignos ou malignos."
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:elegantTextHeight="true"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="•	Cânceres"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:elegantTextHeight="true"
                        android:inputType="textMultiLine"
                        android:justificationMode="inter_word"
                        android:lines="1"/>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>